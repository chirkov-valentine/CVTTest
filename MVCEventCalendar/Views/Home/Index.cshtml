@{
    ViewBag.Title = "Index";
}

<h2>Календарь</h2>
<div class="row">
    <div id="calender"></div>
</div>
<div class="row">
    <div class="checkbox-inline">
        <input type="checkbox" checked="checked" name="meeting" id="chkMeeting" />
        <label for="chkMeeting">Встреча</label>
    </div>
    <div class="checkbox-inline">
        <input type="checkbox" checked="checked" name="business" id="chkBusiness" />
        <label for="chkBusiness">Дело</label>
    </div>
    <div class="checkbox-inline">
        <input type="checkbox" checked="checked" name="jotting" id="chkJotting" />
        <label for="chkJotting">Памятка</label>
    </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <button id="btnDelete" class="btn btn-default btn-sm pull-right">
                    <span class="glyphicon glyphicon-remove"></span> Удалить
                </button>
                <button id="btnEdit" class="btn btn-default btn-sm pull-right" style="margin-right:5px;">
                    <span class="glyphicon glyphicon-pencil"></span> Редактировать
                </button>
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

<div id="myModalSave" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Сохранить</h4>
            </div>
            <div class="modal-body">
                <form class="col-md-12 form-horizontal">
                    <input type="hidden" id="hdEventID" value="0" />
                    <div class="form-group">
                        <label>Тема</label>
                        <input type="text" id="txtTitle" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Тип события</label>
                        <select id="ddEventType" class="form-control">
                            <option value="1">Встреча</option>
                            <option value="2">Дело</option>
                            <option value="3">Памятка</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Дата начала</label>
                        <div class="input-group date" id="dtp1">
                            <input type="text" id="txtStart" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group" id="divEndDate" style="display:none">
                        <label>Дата окончания</label>
                        <div class="input-group date" id="dtp2">
                            <input type="text" id="txtEnd" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group" id="divMeetingPoint" style="display:none">
                        <label>Место</label>
                        <textarea id="txtMeetingPoint" rows="3" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label><input type="checkbox" id="chkIsFinished" checked="checked" />  Выполнено</label>
                        </div>
                    </div>
                    <button type="button" id="btnSave" class="btn btn-success">Сохранить</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </form>
            </div>
        </div>
    </div>
</div>

@Html.ActionLink("К списку контактов", "Index", "People")

<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.print.css" rel="stylesheet" media="print" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/eventsCalendar.js"></script>
}
